@model IEnumerable<Infrastructure.Models.Residencia>

@{
    ViewBag.Title = "Listado de Residencias";
}

<h2>Listado de Residencias</h2>

<p>
    <a href="@Url.Action("IndexMante", "Residencia")" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Agregar </a>
    @*@Html.ActionLink("Crear", "Create")*@
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CondicionResidencia.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Usuario.Nombre)
            
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CondicionResidencia.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Nombre)
                @Html.DisplayFor(modelItem => item.Usuario.Apellido)
            </td>
            <td>
                @*<a href="@Url.Action("Edit", "Residencia", new {id=item.Id})"
                    class="btn btn-primary">Editar</a>*@
                @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |*@
                <a href="@Url.Action("Details", "Residencia", new {id=item.Id})"
                   class="btn btn-primary">Detalles</a>
                @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
            </td>
        </tr>
    }

</table>