@model Infrastructure.Models.Incidente

@{
    ViewBag.Title = "Editar";
}

<h2>Editar Incidente</h2>

@using (Html.BeginForm("Save", "Incidente", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Usuario.Id)
    @Html.HiddenFor(model => model.IdUsuario)
    @Html.HiddenFor(model => model.Usuario.Nombre)
    @Html.HiddenFor(model => model.Usuario.Apellido)
    @Html.HiddenFor(model => model.Titulo)
    @Html.HiddenFor(model => model.Descripcion)
    @Html.HiddenFor(model => model.Usuario.Email)
    @Html.HiddenFor(model => model.Usuario.Cedula)
    @Html.HiddenFor(model => model.Usuario.Contrasenna)
    @Html.HiddenFor(model => model.Usuario.IdTipoUsuario)

    <div class="form-group">
        @Html.DisplayNameFor(model => model.Usuario.Nombre)
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Usuario.Nombre, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            @Html.DisplayFor(model => model.Usuario.Apellido, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.Usuario.Nombre, "", new { @class = "text-danger" })
            @Html.ValidationMessageFor(model => model.Usuario.Apellido, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.DisplayNameFor(model => model.Titulo)
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.DisplayNameFor(model => model.Descripcion)
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Estado, "Estado", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Estado,
           (SelectList)ViewBag.IdEstadoIncidente,
           "Seleccione el estado",
           htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
        </div>
    </div>

    <hr />
    <div class="form-group">
        <div class="btn-group" role="group">
            <input type="submit" value="Actualizar" class="btn btn-primary" />
            @Html.ActionLink("Regresar al listado", "IndexMante", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}