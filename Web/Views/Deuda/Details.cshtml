@model Infrastructure.Models.Residencia

@{
    ViewBag.Title = "Details";
}

<div>
    <h4>Listado de deudas</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Usuario.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Usuario.Nombre)
            @Html.DisplayFor(model => model.Usuario.Apellido)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Deuda)
        </dt>
    </dl>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Deuda.FirstOrDefault().PlanCobro.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deuda.FirstOrDefault().Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deuda.FirstOrDefault().PendientePago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deuda.FirstOrDefault().MontoPagado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deuda.FirstOrDefault().PlanCobro.MontoTotal)
            </th>
        </tr>

        @foreach (var item in Model.Deuda)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PlanCobro.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.Encode(item.PendientePago ? "Pendiente" : "Pagado")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MontoPagado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PlanCobro.MontoTotal)
                </td>
            </tr>
        }

    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
