@model Infrastructure.Models.PlanCobro

@{
    ViewBag.Title = "Details";
}

<h2>Detalle del Plan de Cobro</h2>
<div>
    <hr />

    <div class="row row-cols-2 g-3">
        <div class="col">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-8">
                        <div class="card-body">
                            <span class="card-title" style="font-size: 25px; font-weight: 500; line-height: 1.2">@Html.DisplayFor(model => model.Descripcion)</span>
                            <p class="card-text" style="color: #E45641; font-weight: 500;">
                                @Html.DisplayFor(model => model.MontoTotal)
                            </p>
                            <p class="card-text">
                                <i class="fa-solid fa-bookmark"></i> <b>@Html.DisplayNameFor(model => model.RubroCobro):</b>
                                <ul>
                                    @foreach (var c in Model.RubroCobro)
                                    {
                                        <li> @c.Descripcion @c.Costo.ToString("C")</li>
                                        
                                    }
                                </ul>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="form-group">
    <div class="btn-group" role="group">
        @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Regresar al listado", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
