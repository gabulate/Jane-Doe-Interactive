@model IEnumerable<Infrastructure.Models.Usuario>

@{
    ViewBag.Title = "Listado de Usuarios";
}

<h2>Listado de Usuarios</h2>

<p>
    <a href="@Url.Action("Create", "Usuario")" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Agregar usuario</a>
    @*@Html.ActionLink("Crear", "Create")*@
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.Cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>*@

        <th>
            @Html.DisplayNameFor(model => model.TipoUsuario.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Borrado)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Cedula)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.TipoUsuario.Descripcion)
            </td>
            <td>
                @Html.Encode(item.Borrado ? "Deshabilitado" : "Habilitado")
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
                @*<a href="@Url.Action("Details", "Usuario", new {id=item.Id})"
                    class="btn btn-primary">Detalles</a>*@
                <a href="@Url.Action("Edit", "Usuario", new {id=item.Id})"
                    class="btn btn-primary">Editar</a>
            </td>
        </tr>
    }

</table>